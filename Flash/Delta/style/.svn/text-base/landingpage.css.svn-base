
.title {
font-family: Trebuchet MS, Arial, Helvetica, sans-serif;
font-size:64px;
color:#F2F2F2;
font-style:italic;
font-weight:bold;
}

.textlabel {
float: left;
width: 200px;
text-align: right;
vertical-align: middle;
}

.form {
text-align:center;
background-color:white;
color:black;
width: 450px;
opacity:0.7;
padding: 60px;
border-radius:40px;
}

.input {
text-align:center;
background-color:#bfc6d0;
color:black;
font-size:16px;
padding: 5px;
width:300px; 
height:28px;
box-shadow:0 1px 0 #FFF;
border-radius:5px;
border:1px solid #aaa;
margin-bottom:10px;
}

body {
background: url(images/background.jpg) no-repeat center center fixed;
-webkit-background-size: cover;
-moz-background-size: cover;
-o-background-size: cover;
background-size: cover;
}

            

       
.main {
width:100%;
}
.statement {
font-family: 'Arial', Helvetica, sans-serif;
font-size: 26px;
font-weight: bolder;
color: #383842;
padding-top:25px;
}

.text {
font-family: 'Arial', Helvetica, sans-serif;
font-size: 14px;
font-style: italic;
font-weight: bold;
color: #383842;
padding:10px;
text-shadow:0 1px 0 #FFF;
}

.login {
    text-decoration: none;
    width: 50%;
}